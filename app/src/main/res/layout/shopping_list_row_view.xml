<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/shopping_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/shopping_list_created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shopping_list_name"
        android:layout_alignStart="@+id/shopping_list_name"
        android:layout_below="@+id/shopping_list_name"/>
    <Button
        android:id="@+id/delete_list"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/ic_delete" />
</RelativeLayout>